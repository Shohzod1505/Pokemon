<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView.Pokemon.Title" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Pokemon.Value" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="TextView.Pokemon.View" parent="TextView.Pokemon.Value">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Pokemon.View" parent="">
        <item name="android:background">@drawable/rounded_frame</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
